<!-- 一覧ページ -->
<body>

<h1>Books</h1>
<table>
   <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
   </thead>
   <tbody>
      <% @books.each do |book| %>
        <tr>

          <td><%= book.title %></td>
          <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%=link_to 'Destroy', book_path(book.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<!-- 投稿ページ -->
<h2>New book</h2>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h3><%= @book.errors.count %>errors</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
</body>