<!-- 一覧ページ -->
<h1>Books</h1>
<table>
   <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
   </thead>
   <tbody>
      <% @books.each do |book| %>
      	<td><P>タイトル</P><td>
      	<td><span><%= book.title %></span><td>
        >
        <td>
          <%= link_to "show", book_path(@book) %>
          <%= link_to "edit", edit_book_path(@book) %>
          <%= link_to "back", books_path %>
        </td>
        <tr>
      <% end %>
    </tbody>
</table>

<!-- 投稿ページ -->
<h2>New book</h2>
<div>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

